public class Main {
public static void main(String[] args){
    //agar print krunga toh ek hi line mei dega print krkr 
System.out.println("The sum of these numbers is");    
    int a = 5;
    int b = 8;
    int c = 6;
    int sum = a + b + c;
    System.out.println(sum);
}

